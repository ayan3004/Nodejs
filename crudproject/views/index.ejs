<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Store App</title>
   
    
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            margin-top: 50px;
        }
        .table-container {
            margin-top: 30px;
        }
        table {
            background-color: #ffffff;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        th, td {
            text-align: center;
            vertical-align: middle;
        }
        th {
            background-color: #007bff;
            color: #ffffff;
        }
        td {
            background-color: #f8f9fa;
        }
        .btn-custom {
            margin: 0 5px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Book Store App</h1>
        <div class="form-container">
            <form action="/insert" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" required placeholder="Enter book name">
                </div>
                <div class="form-group">
                    <label for="author">Author</label>
                    <input type="text" class="form-control" name="author" required placeholder="Enter author name">
                </div>
                <div class="form-group">
                    <label for="year">Published Year</label>
                    <input type="number" class="form-control" name="year" required placeholder="Enter published year">
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" class="form-control" name="price" required placeholder="Enter price">
                </div>
                <div class="form-group">
                    <label for="copy">Published Copies</label>
                    <input type="number" class="form-control" name="copy" required placeholder="Enter published copies">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add Book</button>
            </form>
        </div>

        <div class="table-container">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Book Title</th>
                        <th>Author</th>
                        <th>Published Year</th>
                        <th>Price</th>
                        <th>Published Copies</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.map((el, i) => { %>
                    <tr>
                        <td><%= el.title %></td>
                        <td><%= el.author %></td>
                        <td><%= el.year %></td>
                        <td><%= el.price %></td>
                        <td><%= el.copy %></td>
                        <td>
                            <a href="/deleteData?id=<%= el.id %>" class="btn btn-danger btn-custom">Delete</a>
                            <a href="/editData?id=<%= el.id %>" class="btn btn-warning btn-custom">Edit</a>
                        </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    
</body>
</html>
